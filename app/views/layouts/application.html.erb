<!DOCTYPE html>
<html>
<head>
  <title>ResourceFinder2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link type="text/css" rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css" />
</head>
<body>
  <nav class="top-bar">
    <ul class="title-area">
      <h5 class="float-left"><%= link_to "RESOURCE FINDER", root_path %></h5>

        <% if signed_in? %>
        <li/ class="float-right"> <%= link_to "Logout", logout_path, method: :post %></li/>
        <% end %>

    </ul>
  </nav>

  <%= yield %>

</body>
</html>
